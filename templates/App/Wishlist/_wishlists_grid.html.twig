<div class="collections grid-container-collections">
    {% for wishlist in wishlists %}
        <div class="collection-element resize-element" data-title="{{ wishlist.name }}" data-filter-target="element">
            <a class="collection-circle-thumbnail" href="{{ path('app_wishlist_show'|applyContext, {'id': wishlist.id}) }}">
                {% if wishlist.image != null %}
                    <img src="{{ asset(wishlist.image) }}" loading="lazy">
                {% else %}
                    <span class="color-avatar circle avatar color-{{ wishlist.color }}">{{ wishlist.name|first|upper }}</span>
                {% endif %}
            </a>
            <span class="collection-title">{{ wishlist.name }}</span>
            <p class="collection-stats">
                {{ 'counter.wish'|trans({'count': wishlist.cachedValues.counters.wishes|default(0)}) }}
            </p>
        </div>
    {% endfor %}
</div>
