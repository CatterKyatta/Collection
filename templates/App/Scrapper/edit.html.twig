{% set breadcrumb = buildBreadcrumb([{'route': 'app_scrapper_index', 'trans': 'menu.scrappers'}], scrapper, 'breadcrumb.edit_scrapper') %}

{% block title %}
    {{ renderTitle(breadcrumb) }}
{% endblock %}

{% block breadcrumb %}
    {{ renderBreadcrumb(breadcrumb) }}
{% endblock %}

{% block content %}
    <div class="title-block">
        <h1>{{ 'title.edit_scrapper'|trans({'scrapper': scrapper.name}) }}</h1>
    </div>

    <div class="content-block">
        {{ include('App/Scrapper/_form.html.twig') }}
    </div>
{% endblock %}
