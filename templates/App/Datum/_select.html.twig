<div class="input-field col col s5">
    <label for="data_{{ iteration }}_value">{{ datum is defined ? datum.label : choiceList.name }}</label>
    <select id="data_{{ iteration }}_value" name="{{ entity }}[data][{{ iteration }}][value]" data-controller="select--default">
        <option value=""></option>
        {% for choice in choiceList.choices %}
            <option value="{{ choice }}" {% if datum is defined and datum.value == choice %}selected{% endif %}>{{ choice }}</option>
        {% endfor %}
    </select>
</div>