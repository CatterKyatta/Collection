<div class="input-field outlined s10 m5 datum-input-field">
    <input type="text"
           id="data_{{ iteration }}_value"
           name="{{ entity }}[data][{{ iteration }}][value]"
           {% if datum is defined %}value="{{ datum.value }}"{% endif %}
           placeholder=" "
           data-additional-data-target="value"
    >
    <label for="data_{{ iteration }}_value" class="{% if datum is defined %}active{% endif %}">
        {{ 'label.value'|trans }}
    </label>
</div>