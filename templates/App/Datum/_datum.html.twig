<div {% if template is defined %} data-template="{{ template.name }}"{% endif %} class="datum row" data-additional-data-target="datum">
    <div class="col s12 l10 offset-l1 xl6 offset-xl3">
        <div class="col s1 handle icon-holder handle">
            <i class="fa fa-arrows-v fa-fw"></i>
        </div>

        <div class="input-field col s1 label hide-on-med-and-down hidden">
            <span class="complementary-color">{{ ('label.' ~ type)|trans }}</span>
            <input type="hidden"
                   id="data_{{ iteration }}_type"
                   name="{{ entity }}[data][{{ iteration }}][type]"
                   maxlength="255"
                   value="{{ choiceList is not null ? 'list' : type }}"
            >
        </div>

        <div class="input-field input-field col s5 item-label">
            <input
                    type="text"
                    id="data_{{ iteration }}_label"
                    name="{{ entity }}[data][{{ iteration }}][label]"
                    maxlength="255"
                    data-additional-data-target="label"
                    required
                    {% if datum is defined %}
                        value="{{ datum.label }}"
                    {% elseif choiceList is defined %}
                        value="{{ choiceList.name }}"
                    {% endif %}
            >
            <label for="data_{{ iteration }}_label" class="required {% if choiceList is defined or datum is defined %}active{% endif %}">
                {{ 'label.label'|trans }}
            </label>
        </div>

        {% if choiceList is not null %}
            {{ include('App/Datum/_' ~ choiceList.type ~ '.html.twig') }}
        {% else %}
            {{ include('App/Datum/_' ~ type ~ '.html.twig') }}
        {% endif %}


        <div class="col s1 icon-holder">
            <i class="fa fa-remove fa-fw removeDatum" data-action="click->additional-data#remove"></i>
        </div>

        <div class="input-field">
            <input class="position"
                   type="hidden"
                   id="data_{{ iteration }}_position"
                   name="{{ entity }}[data][{{ iteration }}][position]"
                   maxlength="255"
                   {% if datum is defined %}value="{{ datum.position }}"{% endif %}
            >
        </div>

        {% if choiceList is defined and choiceList is not null %}
            <div class="input-field">
                <input type="hidden"
                       id="data_{{ iteration }}_choiceList"
                       name="{{ entity }}[data][{{ iteration }}][choiceList]"
                       maxlength="255"
                       {% if datum is defined %}
                           value="{{ choiceList.id }}"
                       {% elseif choiceList is defined %}
                           value="{{ choiceList.id }}"
                       {% endif %}
                >
            </div>
        {% endif %}
    </div>
</div>
