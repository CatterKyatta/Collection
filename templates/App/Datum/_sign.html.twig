<div class="input-field image-preview-wrapper image-field col s5 row-file" {{ stimulus_controller('preview') }}>
    <label class="file-label">
        {% if datum is defined and datum.image is not null %}
            <img data-preview-target="image"
                 class="preview-image"
                 src="{{ asset(datum.imageSmallThumbnail) }}"
                 aria-label="{{ 'aria.datum_sign_thumbnail'|trans({'%label%': datum.label}) }}"
            />
        {% else %}
            <img data-preview-target="image"
                 class="preview-image"
                 src="{{ asset('build/images/default.png') }}"
                 aria-label="{{ 'aria.default_image'|trans }}"
            />
        {% endif %}
        <input data-action="change->preview#load"
               type="file"
               id="data_{{ iteration }}_fileImage"
               name="{{ entity }}[data][{{ iteration }}][fileImage]"
               class="has-preview hidden"
               accept="image/png, image/jpeg, image/jpg, image/gif, image/webp"
        >
    </label>
</div>