{% set currentLocale = getLocaleLabel(app.request.locale) %}

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website">
<meta property="og:url" content="{{ app.request.uri  }}">
<meta property="og:title" content="{{ title ?? 'Koillection' }}">
<meta property="og:description" content="{{ description ?? 'meta.description'|trans }}">
<meta property="og:image" content="{{ image ?? preload(asset('build/images/meta-logo.png')) }}">
<meta property="og:site_name" content="Koillection">
<meta property="og:locale" content="{{ currentLocale }}">
{% for locale in getLocales() if locale != currentLocale %}
    <meta property="og:locale:alternate" content="{{ locale }}">
{% endfor %}

<!-- Twitter -->
<meta property="twitter:card" content="summary">
<meta property="twitter:url" content="{{ app.request.uri }}">
<meta property="twitter:title" content="{{ title ?? 'Koillection' }}">
<meta property="twitter:description" content="{{ description ?? 'meta.description'|trans }}">
<meta property="twitter:image" content="{{ image ?? preload(asset('build/images/meta-logo.png')) }}">