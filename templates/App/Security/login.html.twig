{% extends 'base.html.twig' %}

{% block body %}
    <div class="box">
        <div>
            <h1>
                Welcome to Koillection
                <div class='logo' aria-label="Logo"></div>
            </h1>

            <div class="content">
                {{ include('App/Security/partials/locales-dropdown.html.twig') }}

                <form action="{{ path("app_security_login") }}" method="post">
                    <h5 class="header">{{ 'title.sign_in'|trans }}</h5>
                    {% if error %}
                        <div class="error-helper">
                            <i class="fa fa-warning fa-fw"></i>
                            {{ error.messageKey|trans(error.messageData, 'messages') }}
                        </div>
                    {% endif %}

                    <div>
                        <div class="input-field">
                            <input type="text" id="login" name="login" value="{{ lastUsername }}" required="required" class="form-control"/>
                            <label class="required" for="login">{{ 'label.login'|trans }}</label>
                        </div>
                    </div>
                    <div>
                        <div class="input-field">
                            <input type="password" id="password" name="password" required="required" class="form-control" />
                            <label class="required" for="password">{{ 'label.password'|trans }}</label>
                        </div>
                    </div>
                    <div class="submit">
                        <input type="submit" name="submit" value="{{ 'btn.sign_in'|trans }}" class="btn btn-lg btn-success btn-block right" />
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                </form>
            </div>
        </div>
    </div>
{% endblock %}
