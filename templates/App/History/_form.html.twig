{{ form_start(form) }}
    {{ form_row(form.term, {'attr': {'class': 'filter-input js-filter-input-ajax', 'placeholder': 'filter.by_name'|trans }}) }}
    <div class="table-filter">
        <div class="filter-title">{{ 'filter.title.types'|trans }} :</div>
        {% for child in form.classes.children %}
            <div class="inline-checkbox-wrapper">
                {{ form_row(child, {'attr': { 'class': 'js-filter-checkbox-ajax'}}) }}
            </div>
        {% endfor %}
    </div>

    <div class="table-filter">
        <div class="filter-title">{{ 'filter.title.actions'|trans }} :</div>
        {% for child in form.types.children %}
            <div class="inline-checkbox-wrapper">
                {{ form_row(child, {'attr': { 'class': 'js-filter-checkbox-ajax'}}) }}
            </div>
        {% endfor %}
    </div>
{{ form_end(form) }}