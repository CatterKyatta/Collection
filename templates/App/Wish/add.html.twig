{% extends 'layout.html.twig' %}
{% form_theme form 'Form/fields.html.twig' %}

{% set breadcrumb = buildBreadcrumb([{'route': 'app_wishlist_index', 'trans': 'menu.wishlists'}], wishlist, 'breadcrumb.add_wish') %}

{% block title %}
    {{ renderTitle(breadcrumb)  }}
{% endblock %}

{% block breadcrumb %}
    {{ renderBreadcrumb(breadcrumb)  }}
{% endblock %}

{% block content %}
    <div class="title-block">
        <h1>{{ 'title.add_wishlist_item'|trans({'%wishlist%': wishlist.name}) }}</h1>
    </div>
    <div class="clearfix"></div>

    <div class="content-block">
        {{ form_start(form) }}
            <div class="row">
                <div class="col s5 offset-s1">
                    {{ form_row(form.name, {'label' : 'label.name'}) }}
                </div>
                <div class="col s5">
                    {{ form_row(form.image) }}
                </div>
            </div>

            <div class="row">
                <div class="col s5 offset-s1">
                    {{ form_row(form.url, {'label' : 'label.url'}) }}
                </div>
                <div class="col s5">
                    {{ form_row(form.wishlist, {'label' : 'label.wishlist'}) }}
                </div>
            </div>
            <div class="row">
                <div class="col s4 offset-s1">
                    {{ form_row(form.price, {'label' : 'label.price'}) }}
                </div>
                <div class="col s4">
                    {{ form_row(form.currency, {'label' : 'label.currency'}) }}
                </div>
                <div class="col s2">
                    {{ form_row(form.visibility, {'label' : 'label.visibility'} ) }}
                </div>
            </div>
            <div class="row">
                <div class="col s10 offset-s1">
                    {{ form_row(form.comment, {'label' : 'label.comment', 'attr': {'class': 'materialize-textarea'}} ) }}
                </div>
            </div>

            <div class="form-btn-holder">
                <button type="submit" class="btn waves-effect waves-light">{{ 'btn.submit'|trans }}</button>
                <a href="{{ path('app_wishlist_show', { id : wishlist.id }) }}" class="waves-effect waves-light btn red darken-1">{{ 'btn.cancel'|trans }}</a>
            </div>
            <div class="clearfix"></div>
        {{ form_end(form) }}
    </div>
{% endblock %}
