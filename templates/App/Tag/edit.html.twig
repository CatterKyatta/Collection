{% extends 'layout.html.twig' %}

{% set breadcrumb = buildBreadcrumb([{'route': 'app_tag_index', 'trans': 'menu.tags'}], tag, 'breadcrumb.edit_tag') %}

{% block title %}
    {{ renderTitle(breadcrumb) }}
{% endblock %}

{% block breadcrumb %}
    {{ renderBreadcrumb(breadcrumb) }}
{% endblock %}

{% block content %}
    <div class="title-block">
        <h1 class="s11">{{ 'title.edit_tag'|trans({'tag': tag.label}) }}</h1>
    </div>

    <div class="content-block">
        {{ include('App/Tag/_form.html.twig') }}
    </div>
{% endblock %}
