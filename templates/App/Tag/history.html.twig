{% extends 'layout.html.twig' %}

{% set breadcrumb = buildBreadcrumb([{'route': 'app_tag_index', 'trans': 'menu.tags'}], tag, 'breadcrumb.history_tag') %}

{% block title %}
    {{ renderTitle(breadcrumb) }}
{% endblock %}

{% block breadcrumb %}
    {{ renderBreadcrumb(breadcrumb) }}
{% endblock %}

{% block content %}
    <div class="collection-header">
        <div class="title-block">
            <h1>{{ tag.label }}</h1>
            <ul class="nav nav-pills">
                <li>{{ 'counter.item'|trans({'count': tag.items|length}) }}</li>
            </ul>
        </div>

        <div></div>
    </div>

    <div class="content-block">
        {{ include('App/History/_logs_table.html.twig', {'logs': logs}) }}
    </div>
{% endblock %}
