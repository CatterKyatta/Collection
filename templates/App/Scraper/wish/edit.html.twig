{% extends 'layout.html.twig' %}

{% set breadcrumb = buildBreadcrumb([
    {'route': 'app_scraper_wish_index', 'trans': 'menu.scrapers'},
    {'route': 'app_scraper_wish_index', 'trans': 'breadcrumb.wish_scrapers'}
], scraper, 'breadcrumb.edit_scraper') %}

{% block title %}
    {{ renderTitle(breadcrumb) }}
{% endblock %}

{% block breadcrumb %}
    {{ renderBreadcrumb(breadcrumb) }}
{% endblock %}

{% block content %}
    <div class="title-block">
        <div>
            <div>
                <h1>{{ 'title.edit_scraper'|trans({'scraper': scraper.name}) }}</h1>
                ⚠️ <a target="_blank" href="https://github.com/benjaminjonard/koillection/wiki/Scraping">{{ 'message.wiki.scrapper'|trans }}</a> ⚠️
            </div>
        </div>
    </div>

    <div class="content-block">
        {{ include('App/Scraper/wish/_form.html.twig') }}
    </div>
{% endblock %}
