{% extends 'layout.html.twig' %}

{% set breadcrumb = buildBreadcrumb([
    {'route': 'app_admin_index', 'trans': 'menu.admin'},
    {'route': 'app_admin_configuration_index', 'trans': 'menu.configuration'}
]) %}

{% block title %}
    {{ renderTitle(breadcrumb) }}
{% endblock %}

{% block breadcrumb %}
    {{ renderBreadcrumb(breadcrumb) }}
{% endblock %}

{% block content %}
    <div class="title-block">
        <h1>{{ 'menu.admin'|trans }}</h1>
    </div>

    <div class="content-block">
        {{ include('/App/Admin/tabs.html.twig', {current: 'configuration'}) }}

        <h2 class="header">{{ 'title.edit_configuration'|trans }}</h2>

        <div class="form">
            {{ form_start(form) }}
                <div class="row">
                    <div class="col s12 l5 offset-l1 xl3 offset-xl3">
                        {{ form_row(form.thumbnailsFormat, {'label' : 'label.thumbnails_format', 'attr': {'data-controller': 'select--default'}}) }}
                    </div>
                </div>

                <div class="center-align form-btn-holder">
                    <button name="submit" type="submit" class="btn waves-effect waves-light">{{ 'btn.submit'|trans }}</button>
                </div>
            {{ form_end(form) }}
        </div>

    </div>
{% endblock %}
