{% extends 'layout.html.twig' %}

{% set breadcrumb = buildBreadcrumb([{'route': 'app_album_index', 'trans': 'menu.albums'}], null, 'breadcrumb.add_album') %}

{% block title %}
    {{ renderTitle(breadcrumb)  }}
{% endblock %}

{% block breadcrumb %}
    {{ renderBreadcrumb(breadcrumb)  }}
{% endblock %}

{% block content %}
    <div class="title-block">
        <h1>{{ 'title.add_album'|trans }}</h1>
    </div>

    <div class="content-block">
        {{ form_start(form) }}
        <div class="row">
            <div class="col offset-s1 s10 m8 offset-m1">
                {{ form_row(form.title, {'label' : 'label.title'} ) }}
            </div>
            <div class="col offset-s1 s10 offset-m0 m2">
                {{ form_row(form.visibility, {'label' : 'label.visibility'} ) }}
            </div>
        </div>

        <div class="form-btn-holder">
            <button type="submit" class="btn waves-effect waves-light">{{ 'btn.submit'|trans }}</button>
            <a href="{{ path('app_album_index') }}" class="waves-effect waves-light btn red darken-1"> {{ 'btn.cancel'|trans }}</a>
        </div>
        <div class="clearfix"></div>
        {{ form_end(form) }}
    </div>
{% endblock %}
