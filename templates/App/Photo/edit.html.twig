{% extends 'layout.html.twig' %}
{% form_theme form 'Form/fields.html.twig' %}

{% set breadcrumb = buildBreadcrumb([{'route': 'app_album_index', 'trans': 'menu.albums'}], photo.album, 'breadcrumb.edit_photo') %}

{% block title %}
    {{ renderTitle(breadcrumb)  }}
{% endblock %}

{% block breadcrumb %}
    {{ renderBreadcrumb(breadcrumb)  }}
{% endblock %}

{% block content %}
    <div class="title-block">
          <h1>{{ 'title.edit_album_photo'|trans({'%photo%': photo.title}) }}</h1>
    </div>
    <div class="clearfix"></div>

    <div class="content-block">
        {{ form_start(form) }}
            <div class="row">
                <div class="col s5 offset-s1">
                    {{ form_row(form.title, {'label' : 'label.title'}) }}
                </div>
                <div class="col s5">
                    {{ form_row(form.image, {'attr': {'src' : photo.image ? photo.image.path : null }}) }}
                </div>
            </div>

            <div class="row">
                <div class="col s2 offset-s1">
                    {{ form_row(form.place, {'label' : 'label.place'}) }}
                </div>
                <div class="col s2">
                    {{ form_row(form.takenAt, {'label' : 'label.taken_at', 'attr': {'class' : 'datepicker' }} ) }}
                </div>
                <div class="col s3">
                    {{ form_row(form.album, {'label' : 'label.album'}) }}
                </div>
                <div class="col s3">
                    {{ form_row(form.visibility, {'label' : 'label.visibility'} ) }}
                </div>
            </div>
            <div class="row">
                <div class="col s10 offset-s1">
                    {{ form_row(form.comment, {'label' : 'label.comment', 'attr': {'class': 'materialize-textarea'}} ) }}
                </div>
            </div>

            <div class="form-btn-holder">
                <button type="submit" class="btn waves-effect waves-light">{{ 'btn.submit'|trans }}</button>
                <a href="{{ path('app_album_show', { id : photo.album.id }) }}" class="waves-effect waves-light btn red darken-1">{{ 'btn.cancel'|trans }}</a>
            </div>
            <div class="clearfix"></div>
        {{ form_end(form) }}
    </div>
{% endblock %}
