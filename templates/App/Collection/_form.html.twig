{{ form_start(form) }}
    {{ form_row(form.image) }}
    <div class="row">
        <div class="col s12 l5 offset-l1 xl3 offset-xl3">
            {{ form_row(form.title, {'label' : 'label.title'} ) }}
        </div>
        <div class="col s12 l5 xl3">
            {{ form_row(form.visibility, {'label' : 'label.visibility'} ) }}
        </div>
    </div>

    <div class="row">
        <div class="col s12 l5 offset-l1 xl3 offset-xl3">
            {{ form_row(form.childrenTitle, {'label' : 'label.children_title'} ) }}
            {% if suggestedChildrenTitles is not empty %}
                {{ 'label.suggestions'|trans }}
                {% for suggestion in suggestedChildrenTitles %}
                    <span class="suggestion" data-suggestion="{{ suggestion }}">{{ suggestion }}</span>
                    {{ not loop.last ? ',' }}
                {% endfor %}
            {% endif %}
        </div>
        <div class="col s12 l5 xl3">
            {{ form_row(form.itemsTitle, {'label' : 'label.items_title'} ) }}
            {% if suggestedItemsTitles is not empty %}
                {{ 'label.suggestions'|trans }}
                {% for suggestion in suggestedItemsTitles %}
                    <span class="suggestion" data-suggestion="{{ suggestion }}">{{ suggestion }}</span>
                    {{ not loop.last ? ',' }}
                {% endfor %}
            {% endif %}
        </div>
    </div>

    <div class="row">
        <div class="col s12 l5 offset-l1 xl3 offset-xl3">
            {{ form_row(form.parent, {'label' : 'label.parent'} ) }}
        </div>
    </div>

    <div class="row center-align form-btn-holder">
        {% if app.request.get('_route') == 'app_collection_add' %}
            {% if app.request.query.has('parent') %}
                {% set cancelUrl = path('app_collection_show', {id: app.request.query.get('parent')}) %}
            {% else %}
                {% set cancelUrl = path('app_collection_index') %}
            {% endif %}
        {% else %}
            {% set cancelUrl = path('app_collection_show', {id: collection.id}) %}
        {% endif %}

        <button type="submit" class="btn waves-effect waves-light">{{ 'btn.submit'|trans }}</button>
        <a href="{{ cancelUrl }}" class="waves-effect red darken-1 waves-light btn"> {{ 'btn.cancel'|trans }}</a>
    </div>
{{ form_end(form) }}